        $(document).ready(function() {
		$('#buttonForModal').click(function() {
			  $('#myModal').reveal();
			});
			
			$('div.galleryDiv ul li img').click(function(){
			    var src = $(this).attr('src').trim();
			    window.open(src);
			});
			
			$('.readMore').click(function(){
			    $(this).hide();
			    $(this).parent().find('.hiddenText').show();
			});
			
			$('.videoLink').click(function(){
			    var vimeoId = $(this).attr('data-vimeoId').trim();
			    $('#vimeoIframe').attr('src', 'http://player.vimeo.com/video/' + vimeoId +'?title=0&byline=0&portrait=0&autoplay=1');
			    $('#videoModal').reveal();
			});
			
			
            
            $('#videoModal').bind('reveal:close', function () {
                $('#vimeoIframe').attr('src', '');
            });
            
            
